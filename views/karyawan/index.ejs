<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Daftar Karyawan</title>
    <link href="/css/sb-admin-2.min.css" rel="stylesheet" />
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="mb-4">Daftar Karyawan</h1>
      <a href="/karyawan/create" class="btn btn-primary mb-3"
        >+ Tambah Karyawan</a
      >
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>No</th>
            <th>Username</th>
            <th>Email</th>
            <th>Usaha</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (karyawan && karyawan.length > 0) { %> <%
          karyawan.forEach((item, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= item.username %></td>
            <td><%= item.email %></td>
            <td><%= item.usaha || '-' %></td>
            <td>
              <a
                href="/karyawan/edit/<%= item.id %>"
                class="btn btn-warning btn-sm"
                >Edit</a
              >
              <form
                action="/karyawan/delete/<%= item.id %>"
                method="POST"
                style="display: inline"
                onsubmit="return confirm('Apakah Anda yakin ingin menghapus data ini?')"
              >
                <button type="submit" class="btn btn-danger btn-sm">
                  Hapus
                </button>
              </form>
            </td>
          </tr>
          <% }) %> <% } else { %>
          <tr>
            <td colspan="5" class="text-center">Belum ada data karyawan</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>
