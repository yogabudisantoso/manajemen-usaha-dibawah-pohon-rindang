<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div
      class="flex overflow-hidden flex-col justify-center items-center px-6 py-16 bg-white max-md:px-5"
    >
      <div class="flex flex-col max-w-full w-[1200px]">
        <div
          class="flex flex-col self-center max-w-full text-center text-black w-[530px]"
        >
          <div class="text-3xl font-bold leading-tight max-md:max-w-full">
            Menu Makanan
          </div>
          <div class="mt-4 text-base leading-6 max-md:max-w-full">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse
            tincidunt sagittis eros. Quisque quis euismod lorem.
          </div>
        </div>

        <!-- Filter Usaha Buttons -->
        <div class="flex justify-center gap-4 mt-8 max-md:flex-wrap">
          <a
            href="/"
            class="py-2 px-4 rounded-lg <%= typeof selectedUsahaId === 'undefined' || selectedUsahaId === null ? 'bg-blue-500 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300' %>"
          >
            Tampilkan Semua
          </a>
          <% if (typeof usahaList !== 'undefined' && usahaList.length > 0) { %>
          <% usahaList.forEach(function(usaha) { %>
          <a
            href="/?usaha_id=<%= usaha.id %>"
            class="py-2 px-4 rounded-lg <%= selectedUsahaId == usaha.id ? 'bg-blue-500 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300' %>"
          >
            <%= usaha.nama_usaha %>
          </a>
          <% }); %> <% } %>
        </div>

        <div
          class="flex flex-wrap gap-4 justify-center items-start mt-16 w-full max-md:mt-10 max-md:max-w-full"
        >
          <% if (menuItems && menuItems.length > 0) { %> <%
          menuItems.forEach(function(menu) { %>
          <div class="flex flex-col flex-1 shrink basis-0 min-w-[240px]">
            <div
              class="flex justify-center self-center max-w-full min-h-[270px] w-[270px]"
            >
              <img
                loading="lazy"
                src="<%= menu.gambar %>"
                alt="<%= menu.nama_menu %>"
                class="object-contain aspect-square min-w-[240px] w-[270px]"
              />
            </div>
            <div class="flex flex-col mt-6 w-full text-center text-black">
              <div class="flex flex-col w-full">
                <div class="text-xl font-bold"><%= menu.nama_menu %></div>
                <div class="text-lg">
                  Rp <%= menu.harga.toLocaleString('id-ID') %>
                </div>
              </div>
              <div class="mt-4 text-base leading-6"><%= menu.deskripsi %></div>
            </div>
          </div>
          <% }); %> <% } else { %>
          <p>Tidak ada menu yang tersedia saat ini.</p>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
