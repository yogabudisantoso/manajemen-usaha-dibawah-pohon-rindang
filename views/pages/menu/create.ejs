<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Tambah Menu Makanan</h1>
</div>

<!-- Content Row -->
<div class="row">
  <div class="col-lg-12 mb-4">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
          Form Tambah Menu Makanan
        </h6>
      </div>
      <div class="card-body">
        <form action="/api/menu" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="usaha_id" class="form-label">Usaha</label>
            <select class="form-control" id="usaha_id" name="usaha_id" required>
              <option value="">Pilih Usaha</option>
              <% usahaList.forEach(function(usaha) { %>
              <option value="<%= usaha.id %>"><%= usaha.nama_usaha %></option>
              <% }); %>
            </select>
          </div>
          <div class="form-group">
            <label for="nama_menu">Nama Menu:</label>
            <input
              type="text"
              class="form-control"
              id="nama_menu"
              name="nama_menu"
              required
            />
          </div>
          <div class="form-group">
            <label for="deskripsi">Deskripsi:</label>
            <textarea
              class="form-control"
              id="deskripsi"
              name="deskripsi"
              rows="3"
            ></textarea>
          </div>
          <div class="form-group">
            <label for="harga">Harga:</label>
            <input
              type="number"
              class="form-control"
              id="harga"
              name="harga"
              required
            />
          </div>
          <div class="form-group">
            <label for="stok">Stok:</label>
            <input
              type="number"
              class="form-control"
              id="stok"
              name="stok"
              required
            />
          </div>
          <div class="form-group">
            <label for="gambar">Gambar:</label>
            <input
              type="file"
              class="form-control-file"
              id="gambar"
              name="gambar"
            />
          </div>

          <div class="form-group mt-4">
            <h5>Komposisi Bahan</h5>
            <p class="text-muted">
              Isi jumlah bahan yang dibutuhkan untuk satu porsi menu.
              Biarkan kosong jika bahan tidak dipakai.
            </p>
            <div class="table-responsive">
              <table class="table table-sm table-bordered">
                <thead>
                  <tr>
                    <th>Barang</th>
                    <th>Qty per Porsi</th>
                    <th>Satuan</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (barangList && barangList.length) { %>
                  <% barangList.forEach(function(b, idx) { %>
                  <tr>
                    <td><%= b.nama_barang %></td>
                    <td>
                      <input
                        type="hidden"
                        name="items[<%= idx %>][barang_id]"
                        value="<%= b.id %>"
                      />
                      <input
                        type="number"
                        step="0.01"
                        min="0"
                        class="form-control"
                        name="items[<%= idx %>][qty]"
                        placeholder="0"
                      />
                    </td>
                    <td>
                      <input
                        type="text"
                        class="form-control"
                        name="items[<%= idx %>][satuan]"
                        placeholder="Contoh: gram"
                        list="unitOptions"
                      />
                    </td>
                  </tr>
                  <% }) %>
                  <% } else { %>
                  <tr>
                    <td colspan="3" class="text-center">
                      Belum ada data barang, tambahkan barang terlebih dahulu.
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
              <% if (unitOptions && unitOptions.length) { %>
              <datalist id="unitOptions">
                <% unitOptions.forEach(function(unit){ %>
                <option value="<%= unit %>"></option>
                <% }) %>
              </datalist>
              <% } %>
            </div>
          </div>
          <button type="submit" class="btn btn-primary">Simpan Menu</button>
          <a href="/menu" class="btn btn-secondary">Batal</a>
        </form>
      </div>
    </div>
  </div>
</div>
