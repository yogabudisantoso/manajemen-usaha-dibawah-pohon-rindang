<!DOCTYPE html>
<html lang="id">
  <head>
    <%- include('../components/header', { title: title }) %>
  </head>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
      <%- include('../components/sidebar') %>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
          <%- include('../components/topbar', { usahaList: typeof usahaList !==
          'undefined' ? usahaList : [], selectedUsahaId: typeof selectedUsahaId
          !== 'undefined' ? selectedUsahaId : null }) %>
          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid"><%- body %></div>
          <!-- End Page Content -->
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%- include('../components/footer') %>
        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <%- include('../components/logout-modal') %>

    <!-- Scripts -->
    <%- include('../components/scripts') %>
  </body>
</html>
